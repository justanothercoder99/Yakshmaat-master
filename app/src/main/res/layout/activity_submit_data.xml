<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".submit_data">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/contact2"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/address"
            android:layout_alignEnd="@+id/contact"
            android:layout_alignRight="@+id/contact"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="875dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:ems="10"
            android:gravity="top"
            android:hint="Secondary Contact Number"
            android:inputType="phone"
            android:layout_alignLeft="@+id/address" />

        <EditText
            android:id="@+id/block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/address"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="489dp"
            android:ems="10"
            android:hint="Taluka/Block"
            android:inputType="textPersonName"
            android:layout_alignLeft="@+id/address"
            android:layout_marginLeft="3dp" />

        <EditText
            android:id="@+id/address"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="352dp"
            android:ems="10"
            android:gravity="top"
            android:hint="Address"
            android:inputType="textCapSentences|textPostalAddress" />

        <EditText
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="119dp"
            android:ems="10"
            android:gravity="top"
            android:hint="Age"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="79dp"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="18dp"
            android:gravity="top"
            android:text="Enter Patient Data"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:fontFamily="sans-serif" />

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="57dp"
            android:ems="10"
            android:gravity="top"
            android:hint="Name"
            android:inputType="textCapWords|textPersonName" />

        <EditText
            android:id="@+id/contact"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/address"
            android:layout_alignEnd="@+id/aadhar"
            android:layout_alignRight="@+id/aadhar"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="815dp"
            android:layout_marginEnd="-31dp"
            android:layout_marginRight="-31dp"
            android:ems="10"
            android:gravity="top"
            android:hint="Primary Contact Number"
            android:inputType="phone"
            android:layout_alignLeft="@+id/address"
            android:layout_marginLeft="0dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="138dp"
            android:layout_marginLeft="138dp"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="134dp"
            android:layout_marginRight="134dp"
            android:text="Submit" />

        <TextView
            android:id="@+id/marital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/contact"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="195dp"
            android:layout_marginEnd="230dp"
            android:layout_marginRight="230dp"
            android:text="Marital Status"
            android:textSize="18sp"
            android:layout_alignLeft="@+id/contact" />

        <RadioGroup
            android:id="@+id/radioMarriage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="90dp"
            android:layout_marginRight="90dp"
            android:checkedButton="@+id/radioMale">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Married" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/radioMarriage"
                android:layout_alignLeft="@+id/radioMarriage"
                android:text="Unmarried"
                tools:ignore="ObsoleteLayoutParam" />

        </RadioGroup>

        <EditText
            android:id="@+id/fam"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/address"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="284dp"
            android:ems="10"
            android:hint="Number of Family Members"
            android:inputType="number"
            android:layout_alignLeft="@+id/address"
            android:layout_marginLeft="3dp" />

        <EditText
            android:id="@+id/ward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/address"
            android:layout_alignParentTop="true"
            android:layout_marginTop="417dp"
            android:ems="10"
            android:hint="Ward/Village"
            android:inputType="textPersonName"
            android:layout_alignLeft="@+id/address" />

        <EditText
            android:id="@+id/district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/address"
            android:layout_alignParentTop="true"
            android:layout_marginTop="552dp"
            android:ems="10"
            android:hint="District"
            android:inputType="textPersonName"
            android:layout_alignLeft="@+id/address" />

        <EditText
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/address"
            android:layout_alignParentTop="true"
            android:layout_marginTop="622dp"
            android:ems="10"
            android:hint="State"
            android:inputType="textPersonName"
            android:layout_alignLeft="@+id/address" />

        <EditText
            android:id="@+id/occupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ward"
            android:layout_alignParentTop="true"
            android:layout_marginTop="690dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:hint="Occupation"
            android:inputType="textPersonName"
            android:layout_alignRight="@+id/ward"
            android:layout_marginRight="0dp" />

        <EditText
            android:id="@+id/aadhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/address"
            android:layout_alignEnd="@+id/occupation"
            android:layout_alignRight="@+id/occupation"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="756dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:ems="10"
            android:hint="Aadhar"
            android:inputType="number"
            android:layout_alignLeft="@+id/address" />

    </RelativeLayout>

</ScrollView>